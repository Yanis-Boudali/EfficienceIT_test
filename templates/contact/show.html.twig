{% extends 'base.html.twig' %}

{% block title %}Contact| EfficienceIT{% endblock %}

{% block body %}
    <h1>Envoyer par {{ contact.name }} {{ contact.surname }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ contact.surname }}</td>
            </tr>
            <tr>
                <th>Adresse email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Département</th>
                <td>{{ contact.departement.name }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>

<div class="d-flex">
    <a class="btn btn-outline-secondary me-2" href="{{ path('contact_index') }}">Retour à l'Historique</a>

    <form method="post" action="{{ path('contact_delete', {'id': contact.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce contact ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
    <button class="btn btn-outline-danger">Supprimer</button>
</div>

</form>


{% endblock %}
